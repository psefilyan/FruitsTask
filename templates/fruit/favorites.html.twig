{% extends 'base.html.twig' %}


{% block body %}
    {% block stylesheets %}    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"/>{% endblock %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <table class="table table-striped">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Fruits</th>
            <th scope="col">Carbohydrates</th>
            <th scope="col">Fat</th>
            <th scope="col">Protein</th>
            <th scope="col">Calories</th>
            <th scope="col">Sugar</th>


        </tr>
        {% for favorite in favorites %}
            <tr>
                <td>{{ favorite.id }}</td>
                <td>{{ favorite.name }}</td>
                <td>{{ favorite.getNutritions.carbohydrates }}</td>
                <td>{{ favorite.getNutritions.fat }}</td>
                <td>{{ favorite.getNutritions.protein }}</td>
                <td>{{ favorite.getNutritions.calories }}</td>
                <td>{{ favorite.getNutritions.sugar }}</td>



            </tr>
        {% endfor %}
        <tr>
            <th>#</th>
            <th>Total</th>
            <th>{{ total.carbohydrates }}</th>
            <th>{{ total.fat }}</th>
            <th>{{ total.protein }}</th>
            <th>{{ total.calories }}</th>
            <th>{{ total.sugar }}</th>
        </tr>
    </table>

</div>
{% endblock %}
